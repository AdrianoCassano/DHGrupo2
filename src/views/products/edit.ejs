        <div>
            <input class="form-contenedor" type="text" name="materiales" value="<%=Product.materiales%>" placeholder="Materiales del producto*">
        </div>
        <div>
            <select class="form-contenedor" name="cantidad" required>
                <option value="" <%= Product.cantidad == "" ? "selected" : "" %>>Selecciona la cantidad de Muebles</option>              
                <option value="1" <%= Product.cantidad == "1" ? "selected" : "" %>>1 unidad</option>
                <% for( let i = 2; i<=20; i++) {%>
                    <option value="<%=i%>" <%= Product.cantidad == i ? "selected" : "" %>><%=i%> unidades</option>                                
                <% } %>             
            </select>
        </div>

