<main>
    <form action="/products/edicion/<%= Product.id %>/?_method=PUT" method="POST" class= "register-form">
        <h3>Edicion de Producto</h3> 
        <div>
            <input class="form-contenedor" type="text" name="nombre" value="<%=Product.nombre%>" placeholder="Ingrese nombre de producto*">
        </div>
